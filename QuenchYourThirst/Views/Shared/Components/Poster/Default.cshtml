@using QuenchYourThirst.Models;
@model IList<Poster>


<section id="home-section" class="hero">
	<div class="home-slider owl-carousel">
		@foreach (var item in Model.Where(m => m.PotID == 1))
		{
			<div class="slider-item" style="background-image: url(@item.Images)">
				<div class="overlay"></div>
				<div class="container">
					<div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">
						<div class="col-sm-12 ftco-animate text-center">

							<!-- <img class="img-fluid" src="item.Images" alt=""> -->
							<h1 class="mb-2">@item.Contents</h1>
							<h2 class="subheading mb-4">@item.Title</h2>
							<p><a href="#" class="btn btn-primary">View Details</a></p>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</section>
